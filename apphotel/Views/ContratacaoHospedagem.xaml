<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource BackGround}">
             
    <VerticalStackLayout
        VerticalOptions="Center"
        Padding="10">
        <Label 
            Text="Cálculo da Diária"
            TextColor="{StaticResource Primary}"
            FontFamily="Kalam"
            FontSize="50"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame Padding="10" BackgroundColor="{StaticResource Secondary}">
            <VerticalStackLayout>
                <Grid ColumnDefinitions="*, *, 2*" RowDefinitions="Auto, Auto">
                    
                    <Label 
                        FontSize="15"
                        FontFamily="Kalam"
                        Grid.Row="0" 
                        Grid.Column="0" 
                        Text="Adultos:"/>
                    
                    <Label 
                        FontFamily="Kalam"
                        Grid.Row="0" 
                        Grid.Column="1" 
                        Text="{Binding Value}"
                        BindingContext="{x:Reference stp_adultos}"/>
                    
                    <Stepper Grid.Row="0" 
                             Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"/>
                    
                    <Label 
                        FontSize="15"
                        FontFamily="Kalam"
                        Grid.Row="1" 
                        Grid.Column="0" 
                        Text="Crianças:" 
                      />

                    <Label 
                        FontFamily="Kalam"
                        Grid.Row="1" 
                        Grid.Column="1"
                        Text="{Binding Value}"
                        BindingContext="{x:Reference stp_crianca}"/>

                    <Stepper Grid.Row="1"
                             Grid.Column="2"
                             x:Name="stp_crianca"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"/>
                </Grid>

                <Label
                    TextColor="{StaticResource Primary}"
                    FontSize="25"
                    FontFamily="Kalam"
                    Text="Escolha sua Suite:"/>

                <Picker
                    
                    x:Name="pck_quarto"
                    Title="Selecione Sua acomodação"
                    ItemDisplayBinding="{Binding descricao}"
                    />

                <Frame
                    Padding="10"
                    Margin="10">

                    <VerticalStackLayout Spacing="10">
                        
                        <Label 
                            FontSize="20"
                            FontFamily="Kalam"
                            Text="Periodo da Estadia:"/>
                        
                        <HorizontalStackLayout Spacing="20">
                            <Label 
                                VerticalOptions="Center"
                                FontFamily="Kalam"
                                Text="Check-in:"/>
                            <DatePicker 
                                        x:Name="dtpck_checkIn"
                                        DateSelected="dtpck_checkIn_DateSelected"
                                        Format="dd/mm/yyyy"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label 
                                VerticalOptions="Center"
                                FontFamily="Kalam"
                                Text="Check-out:"/>
                            <DatePicker 
                                x:Name="dtpck_checkOut"
                                Format="dd/mm/yyyy"/>
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                </Frame>

                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                   
                    <Button
                         Text="Voltar"
                         Clicked="Button_Clicked_1"/>

                    <Button 
                        Text="Avançar"
                        Clicked="Button_Clicked"
/>

                </HorizontalStackLayout>
                    

               

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>